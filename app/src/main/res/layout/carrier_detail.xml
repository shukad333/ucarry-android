<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="17dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/detail_view_margin"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/carrier_detail_image"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:layout_margin="@dimen/detail_view_margin"
            app:srcCompat="@drawable/carrier" />

        <TextView
            android:id="@+id/carrier_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:textIsSelectable="true"
            android:text="Name"
            android:textSize="15dp"
            android:textColor="@color/textColorDark"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_margin="@dimen/detail_view_margin"
            tools:context="com.ucarry.developer.android.activity.carrierListActivityDetailFragment" />

        <TextView
            android:id="@+id/carrier_detail_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:layout_margin="@dimen/detail_view_margin"
            android:textIsSelectable="true"
            android:text="Name"
            android:layout_gravity="center"
            tools:context="com.ucarry.developer.android.activity.carrierListActivityDetailFragment" />

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:background="@drawable/rating_star_red" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/textHintColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:textIsSelectable="true"
            android:text="Trip Details"
            android:textSize="20dp"
            android:layout_marginBottom="4dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            tools:context="com.ucarry.developer.android.activity.CarrierDetailFragment" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/detail_view_margin">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FROM"
                android:textColor="@color/greyColor"
                android:layout_gravity="left"/>

            <TextView
                android:id="@+id/carrier_detail_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/textColorDark"
                android:text="Bangalore"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/detail_view_margin">


            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date &amp; Time"
                android:textColor="@color/greyColor"
                android:layout_gravity="left"/>

            <TextView
                android:id="@+id/carrier_detail_from_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/textColorDark"
                android:text="Bangalore"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/detail_view_margin">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TO"
                android:textColor="@color/greyColor"
                android:layout_gravity="left"/>

            <TextView
                android:id="@+id/carrier_detail_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calicut"
                android:textColor="@color/textColorDark"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/detail_view_margin">


            <TextView
                android:id="@+id/textView333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DATE &amp; TIME"
                android:textColor="@color/greyColor"
                android:layout_gravity="left"/>

            <TextView
                android:id="@+id/carrier_detail_to_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/textColorDark"
                android:text="Bangalore"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/detail_view_margin">


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="READY TO CARRY"
                android:textColor="@color/greyColor"
                android:layout_gravity="left"/>

            <TextView
                android:id="@+id/carrier_detail_ready_to_carry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calicut"
                android:textColor="@color/textColorDark"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/detail_view_margin">


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CAPACITY"
                android:textColor="@color/greyColor"
                android:layout_gravity="left"/>

            <TextView
                android:id="@+id/carrier_detail_capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calicut"
                android:textColor="@color/textColorDark"
                android:gravity="right"/>
        </LinearLayout>




        <Button
            android:id="@+id/btn_carrier_next"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="27dp"
            android:layout_marginTop="@dimen/button_gap"
            android:background="@drawable/button_outline"
            android:text="NOTIFY"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/font_size_hint"
            android:textStyle="bold" />

    </LinearLayout>




</layout>