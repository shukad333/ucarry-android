<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="7dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="sender"
            type="com.ucarry.developer.android.Model.SenderOrder" />

        <variable
            name="carrier"
            type="com.ucarry.developer.android.Model.CarrierScheduleDetailAttributes" />

        <variable
            name="user"
            type="com.ucarry.developer.android.Model.User" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="16dp"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:src="@drawable/carrier"
                android:id="@+id/carrier_image_ico"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"

                android:src="@drawable/sender"
                android:id="@+id/sender_image_ico"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:text="@string/from"
                        android:textColor="@color/textHintColor"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/history_from"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="250"

                        android:text="06-08 01:38:59.539 30250-30250/com.ucarry.developer.android D/RECYCLE VIEW: GET ITEM COUNT18"
                        android:textColor="@color/textColorDark"
                        android:gravity="right"
                        android:textSize="13dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:text="Date"
                        android:textColor="@color/textHintColor"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/history_start_time"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="250"
                        android:gravity="right"
                        android:text="06-08-29"
                        android:textColor="@color/textColorDark"

                        android:textSize="13dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:text="@string/to"
                        android:textColor="@color/textHintColor"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/history_to"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="06-08 01:38:59.539 30250-30250/com.ucarry.developer.android D/RECYCLE VIEW: GET ITEM COUNT18"
                        android:textColor="@color/textColorDark"
                        android:gravity="right"
                        android:textSize="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:text="Date"
                        android:textColor="@color/textHintColor"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/history_end_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="250"
                        android:layout_marginLeft="10dp"
                        android:text="06-08-09"
                        android:textColor="@color/textColorDark"
                        android:gravity="right"
                        android:textSize="13dp" />

                </LinearLayout>

                <!--<LinearLayout-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="50dp"-->
                    <!--android:layout_margin="7dp"-->
                    <!--android:orientation="horizontal">-->

                    <!--<TextView-->
                        <!--android:layout_width="50dp"-->
                        <!--android:layout_height="20dp"-->
                        <!--android:text="@string/item"-->
                        <!--android:textColor="@color/textHintColor"-->
                        <!--android:textSize="11sp" />-->

                    <!--<TextView-->
                        <!--android:id="@+id/item"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="30dp"-->
                        <!--android:layout_marginLeft="10dp"-->
                        <!--android:textColor="@color/textColorDark"-->
                        <!--android:textSize="13sp" />-->
                <!--</LinearLayout>-->
            </LinearLayout>

            <TextView
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@={carrier.capacity}"
                android:textColor="@color/textColorDark"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/current_amount_ico"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/card_rate" />

            <TextView
                android:id="@+id/current_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="600"
                android:textColor="@color/textColorDark"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/card_item" />

            <TextView
                android:id="@+id/current_item"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:text="Documents"
                android:textColor="@color/textColorDark"
                android:textSize="13sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:alpha="0.3"
            android:background="@color/textHintColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_created"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Created"
                android:textColor="@color/textHintColor"
                android:textSize="11sp" />


            <TextView
                android:id="@+id/scheduled"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="scheduled"
                android:textColor="@color/textHintColor"
                android:textSize="11sp" />


            <TextView
                android:id="@+id/picked"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="@string/picked"
                android:textColor="@color/textHintColor"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/intransit"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="@string/intransit"
                android:textColor="@color/textHintColor"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/delivered"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="@string/delivered"
                android:textColor="@color/textHintColor"
                android:textSize="11sp" />
        </LinearLayout>




<FrameLayout
    android:layout_marginBottom="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_gravity="center"
        android:alpha="0.3"
        android:background="@color/textHintColor" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <View
        android:id="@+id/created_order_view"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="37dp"
        android:layout_weight="1"
        android:background="@drawable/solid_circle" />

    <View
        android:id="@+id/scheduled_order_view"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="47dp"
        android:layout_weight="1"
        android:background="@drawable/solid_circle" />


    <View
        android:id="@+id/picked_order_view"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_weight="1"
        android:layout_marginLeft="47dp"

        android:background="@drawable/solid_circle" />
    <View

        android:id="@+id/transit_order_view"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="47dp"
        android:layout_weight="1"

        android:background="@drawable/solid_circle" />
    <View
        android:id="@+id/completed_order_view"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_weight="1"
        android:layout_marginLeft="47dp"
        android:background="@drawable/solid_circle" />
</LinearLayout>

</FrameLayout >



        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:alpha="0.3"
            android:background="@color/textHintColor" />
    </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>

