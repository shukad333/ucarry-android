<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="17dp"
    xmlns:tools="http://schemas.android.com/tools">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/detail_view_margin"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/sender_detail_image"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_weight="0.5"
        android:layout_gravity="center"
        android:layout_margin="@dimen/detail_view_margin"
        app:srcCompat="@drawable/carrier" />

    <TextView
        android:id="@+id/sender_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="2dp"
        android:textIsSelectable="true"
        android:text="Name"
        android:textSize="15dp"
        android:textColor="@color/textColorDark"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_margin="@dimen/detail_view_margin"
        tools:context="com.ucarry.developer.android.activity.SenderListActivityDetailFragment" />

    <TextView
        android:id="@+id/sender_detail_address"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="2dp"
        android:layout_margin="@dimen/detail_view_margin"
        android:textIsSelectable="true"
        android:text="Name"
        android:layout_gravity="center"
        tools:context="com.ucarry.developer.android.activity.SenderListActivityDetailFragment" />

    <ImageView
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginTop="2dp"
        android:layout_gravity="center"
        android:background="@drawable/rating_star_red" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/textHintColor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:textIsSelectable="true"
        android:text="Trip Details"
        android:textSize="20dp"
        android:layout_marginBottom="4dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        tools:context="com.ucarry.developer.android.activity.SenderListActivityDetailFragment" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/detail_view_margin">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FROM"
            android:textColor="@color/greyColor"
            android:layout_gravity="left"/>

        <TextView
            android:id="@+id/sender_detail_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/textColorDark"
            android:text="Bangalore"
            android:gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/detail_view_margin">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TO"
            android:textColor="@color/greyColor"
            android:layout_gravity="left"/>

        <TextView
            android:id="@+id/sender_detail_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Calicut"
            android:textColor="@color/textColorDark"
            android:gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/detail_view_margin">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CATEGORY"
            android:textColor="@color/greyColor"
            android:layout_gravity="left"/>

        <TextView
            android:id="@+id/sender_detail_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Calicut"
            android:textColor="@color/textColorDark"
            android:gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/detail_view_margin">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SUB CATEGORY"
            android:textColor="@color/greyColor"
            android:layout_gravity="left"/>

        <TextView
            android:id="@+id/sender_detail_sub_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Calicut"
            android:textColor="@color/textColorDark"
            android:gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/detail_view_margin">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ITEM WEIGHT"
            android:textColor="@color/greyColor"
            android:layout_gravity="left"/>

        <TextView
            android:id="@+id/sender_detail_item_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="12"
            android:textColor="@color/textColorDark"
            android:gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/detail_view_margin">


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RATE"
            android:textColor="@color/greyColor"
            android:layout_gravity="left"/>

        <TextView
            android:id="@+id/sender_detail_item_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Calicut"
            android:textColor="@color/textColorDark"
            android:gravity="right"/>


    </LinearLayout>


    <Button
        android:id="@+id/sender_trip_accept"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:layout_marginTop="@dimen/button_gap"
        android:background="@drawable/button_outline"
        android:text="ACCEPT"
        android:textColor="@color/textColorWhite"
        android:textSize="@dimen/font_size_hint"
        android:textStyle="bold" />

    </LinearLayout>




    </layout>