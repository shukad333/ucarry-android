<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/prompt"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FILTER"
        android:textSize="15dp"
        android:textColor="@color/cardview_dark_background"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp">



        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:id="@+id/from_loc_filter"
            android:hint="From Location" />


    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DEP. DATE"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>



    <LinearLayout
        android:id="@+id/depform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

            <EditText
            android:id="@+id/from_date_filter"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/edit_text_height"
            android:layout_weight="50"
            android:backgroundTint="@color/editTextSelected"
            android:drawableRight="@drawable/calendarcolor"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="text"
            android:maxLines="1"
            android:onClick="dateClickAdapter"

            android:singleLine="true"

            android:textColor="@color/textColorDark"
            android:textColorHint="@color/textHintColor"
            android:textSize="@dimen/font_size"
            android:textStyle="bold" />


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="To Location"
            android:id="@+id/to_loc_filter"/>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ARR. DATE"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>


    <LinearLayout
        android:id="@+id/toDateform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/to_date_filter"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/edit_text_height"
            android:layout_weight="50"
            android:backgroundTint="@color/editTextSelected"
            android:drawableRight="@drawable/calendarcolor"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="text"
            android:maxLines="1"
            android:onClick="dateClickAdapter"

            android:singleLine="true"

            android:textColor="@color/textColorDark"
            android:textColorHint="@color/textHintColor"
            android:textSize="@dimen/font_size"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>