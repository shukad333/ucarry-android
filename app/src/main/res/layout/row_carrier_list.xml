<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp">

    <data>

        <variable
            name="sender"
            type="com.ucarry.developer.android.Model.SenderOrder" />

        <variable
            name="item"
            type="com.ucarry.developer.android.Model.ItemAttributes" />

        <variable
            name="senderitems"
            type="com.ucarry.developer.android.Model.SenderOrderItemAttributes" />

        <variable
            name="user"
            type="com.ucarry.developer.android.Model.User" />

        <variable
            name="presenter"
            type="com.ucarry.developer.android.Utilities.BindingUtils" />

    </data>

    <LinearLayout
        android:id="@+id/listviewsenders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{(v) -> presenter.onNotifyClick(v, sender)}"
        android:background="@color/textColorWhite"
        android:orientation="vertical"
        android:padding="5dp"
        android:paddingLeft="7dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"

            android:orientation="horizontal">



            <ImageView

                android:id="@+id/ivPic"
                android:layout_width="64dp"

                android:layout_height="64dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="56"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:text="@={user.name}"
                    android:textColor="@color/textColorDark"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvVerifis"
                    android:layout_width="42dp"
                    android:layout_height="19dp"
                    android:background="@drawable/tv_verify_outline"
                    android:gravity="center"
                    android:text="@={sender.status}"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorWhite"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/tvCarrierDetails"
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:gravity="left|bottom"
                    android:text="@={user.provider}"

                    android:textColor="@color/textHintColor"
                    android:textSize="15dp" />
                <!--"-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"

                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingRight="13dp">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/rating_star_red" />

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:paddingLeft="3dp"
                    android:text="4.0"
                    android:textColor="@color/textColorHighlight"
                    android:textSize="13dp" />
            </LinearLayout>

        </LinearLayout>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/textHintColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelfrom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10.29"

                android:text="@string/from"
                android:textColor="@color/textHintColor"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/labelFromValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"

                android:text="@={sender.from_loc}"
                android:textColor="@color/textColorDark"

                android:textSize="13dp" />
            <!--"-->
        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelTo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10.63"

                android:text="@string/to"
                android:textColor="@color/textHintColor"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/labelToValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"

                android:text="@={sender.to_loc}"
                android:textColor="@color/textColorDark"
                android:textSize="13dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/textHintColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivHrs"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/card_time" />

            <TextView
                android:id="@+id/tvHrs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="50"

                android:text="@={item.total_distance}"
                android:textColor="@color/textColorDark"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/ivItem"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/card_item" />

            <TextView
                android:id="@+id/tvItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="50"

                android:text="@={senderitems.item_type}"
                android:textColor="@color/textColorDark"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvnotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/tv_notify_outline"
                android:onClick="@{(v) -> presenter.onNotifyClick(v, sender)}"
                android:text="   NOTIFY   "
                android:textColor="@color/textColorHighlight"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</layout>