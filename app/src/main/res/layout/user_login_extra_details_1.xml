<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialogue_border">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:id="@+id/textView1"
        android:layout_margin="15dp"
        android:text="Tell Us More..."/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">



        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:id="@+id/email_1"
            android:inputType="textEmailAddress"
            android:hint="Enter Email" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:id="@+id/email_2"
            android:inputType="textEmailAddress"
            android:hint="Confirm Email" />


        <Button
            android:id="@+id/submitEmail"
            style="?android:textAppearanceSmall"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="27dp"
            android:layout_marginTop="@dimen/button_gap"
            android:background="@drawable/button_outline"
            android:text="Submit"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/font_size_hint"
            android:textStyle="bold" />

    </LinearLayout>








    </LinearLayout>